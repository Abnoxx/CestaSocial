<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <form method="post" action="/usuario/register" class="cadastro-form">
                    <h1 class="mb-4">Cadastro</h1>
                    <label for="">Email:</label>
                    <div>
                        
                        <input type="email" id="email" name="email" placeholder="Email" required>
                    </div>
                    <label for="">Senha:</label>
                    <div>
                        
                        <input type="password" id="senha" name="senha" placeholder="Senha" required>
                    </div>
                    <label for="">Confirmar Senha:</label>
                    <div>
                        
                        <input type="password" id="confirmSenha" name="confirmSenha" placeholder="Confirmar Senha" required>
                    </div>
                    <div>
                        <button type="submit" name="cadastro" class="btn login-button">Criar conta</button>
                    </div>
                    <p class="mt-3">JÃ¡ possui uma conta? <a href="/usuario/login">Entrar</a></p>
                    <% if (erro) { %>
                        <p class="erro-mensagem"><%= erro %></p>
                    <% } %>
                </form>
            </div>
        </div>
    </div>
</section>