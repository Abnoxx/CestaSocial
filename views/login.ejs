<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <form method="post" action="/usuario/login" class="login-form">
                    <h1 class="mb-4">Login</h1>
                    <label for="email">Email:</label>
                    <div>
                        <input type="email" id="email" name="email" placeholder="Email" required>
                    </div>
                    <label for="senha">Senha:</label>
                    <div>
                        <input type="password" id="senha" name="senha" placeholder="Senha" required>
                    </div>
                    <div>
                        <button type="submit" name="login" class="btn login-button">Entrar</button>
                    </div>
                    <p class="mt-3">Ainda nÃ£o tem uma conta? <a href="/usuario/register">Cadastre-se</a></p>
                    <% if (erro) { %>
                        <p class="erro-mensagem"><%= erro %></p>
                    <% } %>
                </form>
            </div>
        </div>
    </div>
</section>